<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home_line"
                android:id="@+id/ivHomeline"/>
            <RelativeLayout
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/rlTatca"
                android:layout_toRightOf="@id/ivHomeline"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvAll"
                    android:text="TẤT CẢ"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ivTatca"
                    android:layout_toRightOf="@id/tvAll"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_width="@dimen/margin_15dp"
                    android:layout_height="@dimen/margin_15dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:src="@drawable/ic_filter_white"
                android:id="@+id/ivfilter"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_30dp"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:src="@drawable/ic_search"
                android:id="@+id/ivSearch"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ivSearch"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivMore"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"
                android:layout_alignParentRight="true"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/tvHomeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuộc trò chuyện"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivHomeline"
                android:layout_marginLeft="40dp"
                android:textColor="#ffffff"
                android:textSize="25sp" />
           <TextView
               android:id="@+id/tvNotifcation"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Notification"
               android:layout_toRightOf="@id/ivHomeline"
               android:layout_marginLeft="60dp"
               android:textColor="#ffffff"
               android:textSize="25sp"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:src="@drawable/ic_search"
                android:id="@+id/ivSearchNoti"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_30dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivMoreNotif"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>